@model U4_W4_BENCHMARK.Models.Violazione

@{
    ViewBag.Title = "Create";
}

<h2 class="text-center">Nuova Violazione</h2>

@if (ViewBag.Messaggio != null)
{
    <div class="alert alert-danger w-25 mx-auto text-center m-4">ViewBag.Messaggio</div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal w-25 p-5 border border-3 rounded border-danger mx-auto">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mb-4">
            @Html.LabelFor(model => model.Descrizione, htmlAttributes: new { @class = "control-label col-md-2 fw-bold" })
            <div>
                @Html.EditorFor(model => model.Descrizione, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descrizione, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="text-center">
                <input type="submit" value="Aggiungi" class="btn btn-danger w-75 fw-bold" />
            </div>
        </div>
    </div>
}

<div class="text-center mt-5">
    <img src="~/Content/Img/alongi.jpg" alt="alongi" />
</div>
